<div class="container mt-5">
  <% if flash[:notice] %>
    <%= content_tag :h1, flash[:notice], class: "text-center" %>
  <% else %>
    <%= content_tag :h1, "Please Log in", class: "text-center" %>
  <% end %>

  <div class="card p-4 shadow">
    <%= form_with url: sessions_path, html: { class: "login_success" } do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
      </div>
      <div class="mb-3">
        <%= f.label :password, "Password", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <%= link_to "Sign Up", new_user_path, class: "link-primary" %>
        <%= f.submit "Sign In!", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>