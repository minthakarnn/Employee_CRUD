<div class="container mt-5">
  <% if flash[:notice] %>
    <%= content_tag :h1, flash[:notice], class: "text-center" %>
  <% else %>
    <%= content_tag :h1, "กรุณาเข้าสู่ระบบ", class: "text-center" %>
  <% end %>

  <div class="card p-4 shadow">
    <%= form_with url: sessions_path, html: { class: "login_success" } do |f| %>
      <div class="mb-3">
        <%= f.label :email, "อีเมล", class: "form-label" %>
        <%= f.text_field :email, class: "form-control", placeholder: "กรุณาใส่อีเมลของคุณ" %>
      </div>
      <div class="mb-3">
        <%= f.label :password, "รหัสผ่าน", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "กรุณาใส่รหัสผ่านของคุณ" %>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <%= link_to "ลงทะเบียน", new_registration_path, class: "link-primary" %>
        <%= f.submit "เข้าสู่ระบบ!", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>