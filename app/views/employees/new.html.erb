<div class="d-flex justify-content-center align-items-center vh-100" ng-controller="EmployeeFormController">
  <div class="card shadow-lg" style="width: 40rem;">
    <div class="card-header bg-primary text-white text-center">
      <h2>Employee Form</h2>
    </div>
    <div class="card-body">
      <!-- Error Messages -->
      <div ng-if="errors.length" class="alert alert-danger">
        <ul>
          <li ng-repeat="error in errors">{{ error }}</li>
        </ul>
      </div>

      <!-- Form -->
      <form ng-submit="saveEmployee()" class="create_success">
        <!-- Employee Name -->
        <div class="form-group mb-3">
          <label for="employee_name">Employee Name:</label>
          <input type="text" id="employee_name" ng-model="employee.employee_name" 
                 placeholder="Enter Employee's Name" class="form-control" />
        </div>

        <!-- Gender -->
        <div class="form-group mb-3">
          <label>Gender:</label>
          <div>
            <input type="radio" id="male" ng-model="employee.gender" value="male" />
            <label for="male" class="ms-1">Male</label>
            <input type="radio" id="female" ng-model="employee.gender" value="female" class="ms-3" />
            <label for="female" class="ms-1">Female</label>
          </div>
        </div>

        <!-- Hobbies -->
        <div class="form-group mb-3">
          <label>Hobbies:</label>
          <div class="form-check">
            <input type="checkbox" id="reading" ng-checked="employee.hobbies.includes('Reading')" 
                   ng-click="toggleHobby('Reading')" class="form-check-input" />
            <label for="reading" class="form-check-label">Reading</label>
          </div>
          <div class="form-check">
            <input type="checkbox" id="photography" ng-checked="employee.hobbies.includes('Photography')" 
                   ng-click="toggleHobby('Photography')" class="form-check-input" />
            <label for="photography" class="form-check-label">Photography</label>
          </div>
          <div class="form-check">
            <input type="checkbox" id="travelling" ng-checked="employee.hobbies.includes('Travelling')" 
                   ng-click="toggleHobby('Travelling')" class="form-check-input" />
            <label for="travelling" class="form-check-label">Travelling</label>
          </div>
        </div>
        
        <div class="form-group mb-3">
          <label for="career" class="mt-3">Career:</label>
        <select id="career" ng-model="employee.career" class="mb-2 form-control">
          <option value="" disabled selected style="color: #a0a0a0;">Select Career</option>
          <option value="Tech">Tech</option>
          <option value="Influencer">Influencer</option>
          <option value="Vtuber">Vtuber</option>
          <!-- เพิ่มตัวเลือกที่ต้องการที่นี่ -->
        </select>
        </div>

        <!-- Submit Button -->
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary px-4 py-2 shadow">Save Employee</button>
        </div>
      </form>
    </div>
  </div>
</div>