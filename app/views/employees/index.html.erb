<div ng-controller="EmployeeController">
  <div id="employee-data" data-employees-url="<%= employees_path(format: :json) %>"></div>

  <h1 class="text-center my-4">Employees</h1>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <button class="btn btn-danger me-2" ng-click="logout()">Log Out</button>
    <button type="button" class="btn btn-success" onclick="window.location.href='/employees/new'">Add Item</button>
  </div>

  <table id="employee-table" class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Hobbies</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="employee in employees">
        <td>{{$index + 1}}</td>
        <td>{{employee.employee_name}}</td>
        <td>{{employee.hobbies.join(', ')}}</td>
        <td>
          <div class="d-flex gap-2">
            <button class="btn btn-info btn-sm" ng-click="showEmployee(employee.id)">
              <i class="bi bi-eye"></i> Show
            </button>
            <button class="btn btn-primary btn-sm" ng-click="editEmployee(employee.id)">
              <i class="bi bi-pencil"></i> Edit
            </button>
            <button class="btn btn-danger btn-sm" ng-click="deleteEmployee(employee.id)">
              <i class="bi bi-trash"></i> Delete
            </button>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>