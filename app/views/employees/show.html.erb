<div ng-controller="EmployeeShowController">
  <div id="employee-data" data-employees-url="<%= employee_path(@employee.id) %>"></div>
  <div class="flex-column set-center" style="height:100vh;">
    <!-- แสดงข้อความผิดพลาด -->
    <div ng-if="errors.length">
      <div ng-repeat="error in errors">
        <p class="text-danger">{{ error }}</p>
      </div>
    </div>

    <div class="d-flex">
      <div class="m-5">
        <div class="card bg-light border-warning shadow">
          <div class="card-header">
            <h2 class="text-center">Employee's Details</h2>
          </div>
          <div class="card-body" ng-if="employee">
            <h2>&#10145; ID: {{ employee.id }} </h2>
            <h2>&#10145; Name: {{ employee.employee_name }} </h2>
            <h2>&#10145; Gender: {{ employee.gender }} </h2>
            <h2>&#10145; Hobbies: {{ employee.hobbies.join(", ") }} </h2>
          </div>
          <div ng-if="!employee">
            <p class="text-danger">No employee found.</p>
          </div>
          <div class="d-flex justify-content-center">
            <button ng-click="editEmployee(employee.id)" class="btn-success">Edit Employee</button>
            <button ng-click="deleteEmployee(employee.id)" class="btn-danger">Delete Employee</button>
            <button ng-click="viewAllEmployees()" class="btn-primary">View All Employees</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>