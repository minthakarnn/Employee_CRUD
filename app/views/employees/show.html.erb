<div ng-controller="EmployeeShowController">
  <div id="employee-data" data-employees-url="<%= employee_path(@employee.id) %>"></div>
  <div class="flex-column set-center" style="height:100vh;">

    <!-- แสดงข้อความผิดพลาด -->
    <div ng-if="errors.length" class="alert alert-danger">
      <div ng-repeat="error in errors">
        <p>{{ error }}</p>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <div class="m-5">
        <div class="card bg-light border-warning shadow-lg" style="max-width: 500px;">
          <div class="card-header bg-warning text-white text-center">
            <h2>Employee's Details</h2>
          </div>
          <div class="card-body" ng-if="employee">
            <h5><strong>&#10145; ID:</strong> {{ employee.id }} </h5>
            <h5><strong>&#10145; Name:</strong> {{ employee.employee_name }} </h5>
            <h5><strong>&#10145; Gender:</strong> {{ employee.gender }} </h5>
            <h5><strong>&#10145; Hobbies:</strong> {{ employee.hobbies.join(", ") }} </h5>
          </div>
          <div ng-if="!employee" class="text-center">
            <p class="text-danger">No employee found.</p>
          </div>

          <div class="d-flex justify-content-center mb-3">
            <button ng-click="editEmployee(employee.id)" class="btn btn-success mx-2">Edit Employee</button>
            <button ng-click="deleteEmployee(employee.id)" class="btn btn-danger mx-2">Delete Employee</button>
            <button ng-click="viewAllEmployees()" class="btn btn-primary mx-2">View All Employees</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>