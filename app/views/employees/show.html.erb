<div class="flex-column set-center" style="height:100vh;">
  <% if flash[:errors] %>
    <% flash.each do |name, message| %>
      <p class="text-danger"><%= message %></p>
    <% end %>
  <% end %>

  <div class="d-flex">
    <div class="m-5">
      <div class="card bg-light border-warning shadow">
        <div class="card-header">
          <h2 class="text-center">Employee's Details</h2>
        </div>
        <div class="card-body">
          <% if @employee %>
            <h2>&#10145; ID: <%= @employee.id %> </h2>
            <h2>&#10145; Name: <%= @employee.employee_name %> </h2>
            <h2>&#10145; Gender: <%= @employee.gender %> </h2>
            <h2>&#10145; Hobbies: <%= Array(@employee.hobbies).join(", ") %> </h2>
          <% else %>
            <p class="text-danger">No employee found.</p>
          <% end %>
        </div>
        <div class="d-flex justify-content-center">
          <%= button_to "Edit Employee", edit_employee_path(@employee), method: :get, class: "btn-success border-0 rounded-pill shadow p-2 m-2" %>
          <%= button_to "Delete Employee", @employee, method: :delete, data: { confirm: "Are you sure?" }, class: "btn-danger border-0 rounded-pill shadow p-2 m-2" %>
          <%= button_to "View All Employees", employees_path, method: :get, class: "btn-primary border-0 rounded-pill shadow p-2 m-2" %>
        </div>
      </div>
    </div>
  </div>
</div>