<div class="flex-column set-center" ng-controller="EmployeeEditFormController">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center">Edit Employee Form</h2>
    </div>
    <div class="card-body">
      <!-- Error Message -->
      <div ng-repeat="error in errors" class="text-danger">
        <p>{{ error }}</p>
      </div>

      <!-- Form Started Here -->
      <form ng-submit="updateEmployee()">
        <div ng-show="employee.id">
          <label for="employee_id" class="mt-3">Employee ID:</label>
          <input type="text" id="employee_id" ng-model="employee.id" 
                 class="mb-2 form-control" disabled />
        </div>
        <!-- Employee Name -->
        <label for="employee_name" class="mt-3">Employee Name:</label>
        <input type="text" id="employee_name" ng-model="employee.employee_name" 
               placeholder="Enter Employee's Name" class="mb-2 form-control" />

        <br>

        <!-- Radio Button For Gender -->
        <div class="form-group">
          <label>Gender:</label>
          <input type="radio" id="male" ng-model="employee.gender" value="male" />
          <label for="male">Male</label>
          <input type="radio" id="female" ng-model="employee.gender" value="female" />
          <label for="female">Female</label>
        </div>

        <br>

        <!-- Checkbox For Hobbies -->
        <div class="form-group">
          <label>Hobbies:</label>
          <div>
            <input type="checkbox" ng-checked="employee.hobbies.includes('Reading')" 
                   ng-click="toggleHobby('Reading')" />
            <label>Reading</label>
          </div>
          <div>
            <input type="checkbox" ng-checked="employee.hobbies.includes('Photography')" 
                   ng-click="toggleHobby('Photography')" />
            <label>Photography</label>
          </div>
          <div>
            <input type="checkbox" ng-checked="employee.hobbies.includes('Travelling')" 
                   ng-click="toggleHobby('Travelling')" />
            <label>Travelling</label>
          </div>
        </div>

        <br>

        <!-- Submit Button -->
        <button type="submit" class="btn-primary border-0 rounded-pill shadow p-3">Update Employee</button>
      </form>
    </div>
  </div>
</div>